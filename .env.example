# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-here
CORS_ALLOW_ALL_ORIGINS=True
ALLOWED_HOSTS=localhost,127.0.0.1,.koyeb.app

# Database
# For Supabase Postgres: postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres
DATABASE_URL=sqlite:///db.sqlite3

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key

# Supabase Storage (S3-compatible)
USE_SUPABASE=False
SUPABASE_S3_ACCESS_KEY_ID=your-access-key-id
SUPABASE_S3_SECRET_ACCESS_KEY=your-secret-access-key
SUPABASE_S3_BUCKET_NAME=your-bucket-name
SUPABASE_S3_ENDPOINT_URL=https://your-project-id.supabase.co/storage/v1/s3
SUPABASE_S3_REGION_NAME=us-east-1
